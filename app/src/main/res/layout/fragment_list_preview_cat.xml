<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:padding="5dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            android:minHeight="300dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageButton android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/ic_arrow"
                         android:tint="@color/colorPrimary"
                         android:background="@color/colorTransparent"
                         android:contentDescription="@string/button_open_list"
                         android:layout_alignParentEnd="true"
                         android:id="@+id/buttonOpenList"
                         android:foreground="?attr/selectableItemBackgroundBorderless"
                         android:layout_margin="5dp"/>

            <TextView
                    android:id="@+id/tvNameCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Example"
                    style="@style/RegularTextTitle"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:layout_alignStart="@id/buttonOpenList" />
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvDrinks"
                    android:layout_below="@id/tvNameCategory" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:visibility="gone" />
</RelativeLayout>