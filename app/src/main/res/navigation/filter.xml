<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/filter"
        app:startDestination="@id/filterFragment">

    <fragment
            android:id="@+id/filterFragment"
            android:name="com.mvasilova.cocktailrecipes.app.ui.filter.FilterFragment"
            android:label="FilterFragment"
            tools:layout="@layout/fragment_filter">
        <action
                android:id="@+id/action_filterFragment_to_filterByParametersFragment"
                app:destination="@id/filterByParametersFragment" />
    </fragment>
    <fragment
            android:id="@+id/filterByParametersFragment"
            android:name="com.mvasilova.cocktailrecipes.app.ui.filter.filterbyparameters.FilterByParametersFragment"
            android:label="FilterByParametersFragment">
        <argument
                android:name="type"
                app:argType="com.mvasilova.cocktailrecipes.app.ui.filter.filterbyparameters.TypeDrinksFilters" />
    </fragment>
</navigation>